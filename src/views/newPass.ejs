<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="./fontawesome-free-6.1.2-web/css/all.css" /> -->
    <title>Reset Password | Greenhouse</title>
    <style>
      :root {
        --clr-primary: #00b2a8;
        --clr-secondary: #69e1dd;
        --clr-text: #696b75;
        --clr-tertiary: #f69da3;
      }

      @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500&display=swap");

      body {
        font-family: "Open Sans", sans-serif;
        background-color: #fff;
        color: var(--clr-text);
        line-height: 1.5;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      img {
        object-fit: contain;
        width: 100%;
        height: 100%;
      }

      main {
        padding: 8rem 4rem;
        background-color: #cbe9e8;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .verif-email,
      .new-pass {
        position: relative;
        background-color: #fff;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 85%;
        padding: 3rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .company-label {
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translate(-50%, -50%);
        color: var(--clr-primary);
        font-family: inherit;
        font-weight: bold;
        letter-spacing: 1px;
        font-size: 22px;
        opacity: 0.3;
      }

      .verif-img-box {
        flex: 0 0 40%;
        margin-right: 1rem;
      }

      .verif-info-box {
        margin-left: 1rem;
        flex: 0 0 50%;
      }

      .verif-welcome {
        text-align: right;
        margin-bottom: 5rem;
        font-size: 35px;
        color: var(--clr-primary);
      }
      .verif-underline {
        display: none;
      }

      .verif-title {
        font-size: 22px;
        margin-bottom: 2rem;
        color: #000;
      }

      .verif-leftTime {
        font-size: 13px;
        color: var(--clr-secondary);
      }

      .verif-leftTime-icon {
        color: var(--clr-tertiary);
        font-size: 14px;
        margin-right: 5px;
      }

      @media screen and (max-width: 1023px) {
        .verif-email {
          width: 100%;
        }
        .verif-img-box {
          flex: 0 0 45%;
        }
        .verif-welcome {
          font-size: 33px;
        }
        .verif-title {
          font-size: 18px;
        }
      }
      @media screen and (max-width: 767px) {
        main {
          height: auto;
        }
        .verif-email {
          width: 100%;
          flex-direction: column;
        }

        .verif-img-box {
          margin: 0;
        }
        .verif-info-box {
          text-align: center;
        }
        .verif-welcome {
          text-align: center;
          margin: 2rem 0;
        }
        .verif-underline {
          display: block;
          width: 100%;
          height: 2px;
          background-color: #f1f1f1;
          margin: 1rem 0;
        }
        .verif-title {
          font-size: 18px;
          margin: 2rem 0;
        }
        .verif-description {
          margin: 0 auto;
          font-size: 13px;
          width: 80%;
        }
      }

      @media screen and (max-width: 479px) {
        main {
          padding: 8rem 2rem;
        }
        .verif-email {
          padding: 3rem 2rem;
        }
      }

      /* New Pass */

      .new-pass-form {
        width: 100%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
      }

      .new-pass-label {
        text-align: left;
      }

      .new-pass-input {
        border: none;
        outline: none;
        border-radius: 2px;
        padding: 1rem;
        font-size: 16px;
        margin: 0.5rem 0;
        border: 2px solid #00b2a8;
      }

      .submit-link {
        display: block;
      }

      .submit-btn {
        border: none;
        outline: none;
        cursor: pointer;
        color: #fff;
        background-color: var(--clr-primary);
        font-size: 16px;
        font-weight: bold;
        padding: 1rem 1.2rem;
        letter-spacing: 1px;
        font-family: inherit;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-radius: 2px;
        transition: all 0.2s;
        width: 100%;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <main>
      <section class="new-pass verif-email">
        <p class="company-label">Vira</p>
        <div class="verif-img-box">
          <img src="./img/resetPass.png" alt="" class="verif-img" />
        </div>
        <div class="verif-info-box">
          <h1 class="verif-welcome">Reset Password</h1>
          <div class="verif-underline"></div>
          <p class="verif-title">Enter your new password</p>
          <script>
            const cookies = document.cookie.split(";")
            for (let i =0 ; i<cookies.length ; i++){
              const cookie = cookies[i].trim();
              if (cookie.startWith("token=")){
                const token = cookie.substring(6 , cookie.length);
              }
            else if(cookie.startsWith("hash=")){
              const hash = cookie.substring(5 , cookie.length);
            }}
            </script>
          <form action=""  method="post" class="new-pass-form">
            <p for="newPass" class="new-pass-label">password</p>
            <input
              type=""
              placeholder="at least 8 characters"
              name="password"
              class="new-pass-input"
              required
              minlength="8"
            />
            <input
            type="hidden"
            name="token"
            value =token
          />
          <input
          type="hidden"
          name="hash"
          value =hash
        />
            <a href="" class="submit-link">
              <button class="submit-btn">Submit</button>
            </a>
          </form>
          <p class="verif-leftTime">
            <i class="fa-solid fa-circle-exclamation verif-leftTime-icon"></i>
            This link will be expired in 24 hours.
          </p>
        </div>
      </section>
    </main>
  </body>
</html>
